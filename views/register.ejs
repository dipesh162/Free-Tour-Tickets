<% include partials/header.ejs %>


<div class="page-bg-login">
        <h1 class="ftt-heading">FreeTourTickets'19</h1>
        <h5 class="ftt-login-register">Register your account</h5>
        <hr class="hr-reg">
        <div class="login-reg-form-div">
          <p class="container">
            <form action="/register" method="POST" name="myform" onsubmit="return validation()">
 				<div class="form-group">
					<div class="form-row">
					    <div class="col-md-6 col-sm-12">
					      <input type="text" name="firstname" class="form-control first-name" placeholder="First Name">
					    </div>
					    <div class="col-md-6 col-sm-12">
					      <input type="text" name="lastname" class="form-control" placeholder="Last Name">
					    </div>
					</div>
				</div>	
				<div class="form-group">
				    <input class="form-control" type="text" name="username" placeholder="Username">
				</div>
				<div class="form-group">
				    <input class="form-control" type="password" name="password" placeholder="Password" autocomplete="on" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters">
				</div>
                <div class="form-group">
				    <input href="/" type="submit" class="btn btn-danger login-register-btn">
                </div>	
            </form>
          </p>
        </div>
</div>
<script type="text/javascript" src="../formvalid(register).js">

</script>

