<% include partials/header.ejs %>

<% if(submissions.length === 0){ %>
  <div style="height: 650px;">
    <h1 id="no-submissions">No Submissions Yet</h1>
    <img src="emoji.png" class ="emoji">
  </div>
<% } %> 

<img src="/<%= event.bgImage %>" alt="" style="width: 70%; height: 400px;">
<h1><%= event.celebName %>'s <%= event.tourName %> Uploads:</h1>

<% if(submissions.length !== 0){ %> 
    <% submissions.forEach(function(sub){ %>
      <% if(sub){%>
          <div class="container">
            <div class="row">
              <% if(sub.upload.sketch){ %>
                <div class="col-lg-6">
                  <div id="carouselExampleSlidesOnly carousel Carousel" class="slide" data-ride="carousel" data-interval="2000">
                    <div class="carousel-inner">
                          <div class="carousel-item active">
                            <img class="d-block w-100 img-fluid" src="/<%= sub.upload.sketch %>" alt="Third slide">
                            <div class="carousel-caption d-none d-md-block">
                                <% if(sub.user){ %>
                                  <h5><%= sub.user.firstName %> <%= sub.user.lastName %></h5>
                                  <p><%= sub.user.email %></p>
                                <% } %>
                            </div>
                          </div> 
                          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                              <span class="sr-only">Previous</span>
                            </a>
                          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                          </a>        
                    </div>
                  </div>
                </div>

              <% } else { %>
                <div class="col-lg-6">
                  <video width="200" height="200" controls style="margin: 20px auto;">
                    <source src="/<%= sub.upload.cover %>" type="video/mp4">
                  </video>
                  <% if(sub.user){ %>
                    <h5><%= sub.user.firstName %> <%= sub.user.lastName %></h5>
                    <p><%= sub.user.email %></p>
                  <% } %>
                </div>
              <% } %>
            </div>
          </div>


      <% } %>
    <% }) %>


<% } %>


<% include partials/footer.ejs %>

