<% include partials/header.ejs %>

<div class="page-bg-artworks" style="background-image: url('/<%= event.bgImage %>')">
		<div style="width: inherit; margin: 0 auto;">
			<h1 style="color: white; text-align: center; width: 100%; font-family: Billabong; font-weight: 900; margin-left: -30px">Upload your any <%= event.celebName %>'s cover/sketch</h1>
			<hr style="margin-top: 35px; margin-bottom: 30px;">
			<form action="/greetings/<%= event._id %>/<%= tourIndex %>" method="POST" name="myform" enctype="multipart/form-data" onsubmit="return validation()"> <!-- <%= %> -->			
				<div class="form-group">
					<input type="file" class="form-control-file" accept="image/*" name="sketch" placeholder="Sketch">
				</div>
				<div class="form-group">
					<input type="file" class="form-control-file" accept="video/*" name="cover" placeholder="Cover">
				</div>
				<div class="form-group">
					<input type="submit" value="Submit">
				</div>
			</form>
		</div>			
</div>

<script type="text/javascript" id="script" src="../formvalid(artworks).js" data-name="<%= event.celebName %>">
	
</script>

