<% include partials/header.ejs %>

<div style="min-height: calc(100vh - 56px); background: #0000; padding: 2rem;">
    <% if(sketches.length === 0 && covers.length === 0){ %>
        <h1 id="no-submissions">No Uploads Yet</h1>
        <img src="/emoji.png" class ="emoji">
    <% } %> 

    <% if(sketches.length !== 0) { %>
        <h1 class="user_uploads_heading">Sketches <i style="font-size: 24px;" class="fas fa-paint-brush"></i></h1>
        <div class="container">
            <div class="row">
            <% for(var i = 0; i < sketches.length; i++){ %>
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <div style="width: 250px; height: 250px; border: 1px solid brown; margin: 30px auto">
                            <img src="/<%= sketches[i] %>" alt=""; style="width: 100%; height:100%">
                        </div>
                    </div>
            <% } %>
            </div>
        </div>
    <% } %>    

    <% if(covers.length !== 0) { %>    
        <h1 class="user_uploads_heading">Covers <i style="font-size: 24px;" class="fas fa-video"></i></h1>
        <div class="container">
            <div class="row">
            <% for(var j = 0; j < covers.length; j++){ %>
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <!-- <div style="margin: 20px auto;"> -->
                            <video width="250" height="250" controls style="margin: 20px auto;">
                                <source src="/<%= covers[j] %>" type="video/mp4">
                            </video>
                        <!-- </div>     -->
                    </div> 
            <% } %>
            </div>
        </div> 
    <% } %>
</div>
<% include partials/footer.ejs %>
