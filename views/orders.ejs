<%- include('partials/header.ejs'); -%>

<div class="orders-container">
	<% if(orders.length == 0){ %>
		<h1 id="no-submissions">No Orders Yet</h1>
		<img src="/emoji.png" class ="emoji">
	<% } else{ %>

		<div class="container-fluid orders-inner-container">
				<% orders.forEach(function(order){ %>
				<div class="order-row">
					<img src="/<%= order.bgImage %>" class="order-event-img">
					
					<div class="order-event-details">
						<h5><%= order.celebName %>'s - <%= order.tourName %> <br><%= order.tourDate %> <br> <%= order.tourCity %> <%= order.tourVenue %>, <%= order.tourCountry %></h5>
					
						<div class="order-submissions-row">
							<% if(order.uploads.sketch && !order.uploads.cover) { %>
							<div>
								<img class="order-submission-img" src="/<%= order.uploads.sketch %>" alt="";>
							</div>
							<% } %>
							
							<% if(order.uploads.cover && !order.uploads.sketch) { %>
							<div style="border-radius:10px">
								<video class="order-submission-video" width="" height="" controls="">
									<source src="/<%= order.uploads.cover %>" type="video/mp4">
								</video>
							</div>
							
							<% } if(order.uploads.cover && order.uploads.sketch) { %>
								<div>
									<img class="order-submission-img"  src="/<%= order.uploads.sketch %>" alt="";>
								</div>
	
								<div style="border-radius:10px">
									<video  class="order-submission-video" width="" height="" controls="">
										<source src="/<%= order.uploads.cover %>" type="video/mp4">
									</video>
								</div>
							<% } %>
						</div>
					</div>
			</div>

				<% }) %>
		</div>	
	<% } %>
</div>


<%- include('partials/footer.ejs'); -%>

